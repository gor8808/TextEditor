<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <DockPanel Panel.ZIndex="1" VerticalAlignment="Top">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="NewBtn_Click"/>
                    <MenuItem Header="_Open" Click="OpenBtn_Click"/>
                    <MenuItem Header="_Save" Click="SaveBtn_Click"/>
                    <Separator/>
                    <MenuItem Header="_Exit" Click="ExitBtn_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <!--</DockPanel>
        </DockPanel>
        </DockPanel>-->
        <!--<Grid>
            <Grid>
                <Grid>
                    <TextBlock Text="Example"/>
                </Grid>
            </Grid>
        </Grid>-->
        <TextBox x:Name="Editor" Margin="0,20,0,0" Background="Black" Foreground="White">
            
        </TextBox>
    </Grid>
</Window>
